<Window x:Class="WpfUtil.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight"
        Title="MainWindow">
    <StackPanel>
        <Image Width="200" Height="200" Source="{StaticResource GreatWave}" />
        <TextBox PreviewTextInput="DigitOnly"
                 LostFocus="TrimTextBox" />
        <TextBox PreviewTextInput="DigitAndDecimalPointOnly"
                 LostFocus="TrimTextBox" />
        <Button Click="Button1_OnClick">Button1</Button>
        <Button Name="Button2">Button2</Button>
    </StackPanel>
</Window>
